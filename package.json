{
  "name": "clean-boilerplate",
  "version": "1.0.0",
  "description": "A clean architecture node.js boilerplate",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node ./build/src/server.js",
    "build": "rimraf ./build && cross-env NODE_ENV=production tsc",
    "start:local": "cross-env NODE_ENV=local ts-node-dev --poll ./run.ts",
    "start:dev": "cross-env NODE_ENV=development ts-node-dev --poll ./run.ts",
    "build:dev": "rimraf ./build && cross-env NODE_ENV=development webpack -- --color",
    "test": "jest",
    "test:all": "snyk test && cross-env NODE_ENV=test jest",
    "pm2": "cross-env NODE_ENV=production pm2 start ecosystem.config.js --env production",
    "pm2:dev": "cross-env NODE_ENV=development pm2 start ecosystem.config.js --env development",
    "lint": "eslint . --ext .ts",
    "format": "npx prettier --write . --yes",
    "docs": "rimraf docs && typedoc --options typedoc.json",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "keywords": [
    "boilerplate"
  ],
  "author": "Kasra Karami <Kasra.Karami.KK@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "ajv": "^8.11.0",
    "ajv-errors": "^3.0.0",
