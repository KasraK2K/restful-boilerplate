    "cross-env": "^7.0.3",
    "crypto-js": "^4.1.1",
    "cryptr": "^6.0.3",
    "dotenv": "^16.0.1",
    "dotenv-expand": "^9.0.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.5.2",
    "firebase-admin": "^11.0.1",
    "form-data": "^4.0.0",
    "formidable": "^2.0.1",
    "google-auth-library": "^8.7.0",
    "google-libphonenumber": "^3.2.30",
